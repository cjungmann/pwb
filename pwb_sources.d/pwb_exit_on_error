# -*- mode:shell-script; sh-shell:bash -*-
# shellcheck shell=bash

## BEGIN_DOC
## Put this command after any invocation of pwb to respond
## to errors with helpful line number of explanation of the
## error.
## END_DOC

pwb_exit_on_error()
{
    # Must be first line to capture previous statements exit value
    local -i exval="$?"

    if [ "$exval" -ne 0 ]; then
        printf $'pwb error at line %d of script %s:\n' \
               $(( "${BASH_LINENO[0]}" - 1 )) \
               "${BASH_SOURCE[1]}" >&2
        printf -v errmsg $'   \e[31;1m%s\e[m\n' "$PWB_ERROR" >&2
        read -n1 -p "$errmsg"
        exit 1
    fi
}
